{
  "manifest_version": 3,
  "name": "Chrome Shortcuts",
  "version": "1.1",
  "description": "Custom keyboard shortcuts: Cmd+Shift+C to copy URL, Alt+Space to switch to previous tab",
  "permissions": ["activeTab", "clipboardWrite", "scripting", "storage", "tabs"],
  "background": {
    "service_worker": "background.js"
  },
  "commands": {
    "copy-url": {
      "suggested_key": {
        "default": "Ctrl+Shift+C",
        "mac": "MacCtrl+Shift+C"
      },
      "description": "Copy current URL to clipboard"
    },
    "switch-to-previous-tab": {
      "suggested_key": {
        "default": "Alt+Space",
        "mac": "Alt+Space"
      },
      "description": "Switch to previously used tab"
    }
  }
}
